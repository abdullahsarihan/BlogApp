@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h3>Mesaj Detay sayfası</h3>

@Html.Label("Mesaj ID")
@Html.TextBoxFor(x=> x.MessageID , new {disabled = "disabled", @class = "form-control"})
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x=> x.Subject , new {disabled = "disabled", @class = "form-control" })
@Html.Label("Mesaj İçeriği")
@Html.TextAreaFor(x=> x.MessageDetails, 10, 3, new {disabled = "disabled", @class = "form-control" })
<br />
<button class="btn btn-success">Mesajlara Dön</button>



